<body>
    <div class="container">
        <h1>Từ điển Anh-Việt</h1>
        <div class="form-group">
            <label for="englishWord">Nhập từ tiếng Anh:</label>
            <input type="text" id="englishWord" placeholder="Ví dụ: hello" onkeyup="if(event.keyCode === 13) searchWord()">
        </div>
        <button onclick="searchWord()">Tra cứu</button>
        <div id="result">
            Nhập từ để tra cứu...
        </div>
    </div>

    <script>
        // Mảng 1: Lưu trữ các từ tiếng Anh
        const englishWords = [
            "hello", "world", "cat", "dog", "house", 
            "book", "computer", "apple", "banana", "water",
            "love", "friend", "family", "travel", "music"
        ];

        // Mảng 2: Lưu trữ các từ tiếng Việt tương ứng
        const vietnameseMeanings = [
            "xin chào", "thế giới", "mèo", "chó", "ngôi nhà", 
            "sách", "máy tính", "quả táo", "quả chuối", "nước",
            "tình yêu", "bạn bè", "gia đình", "du lịch", "âm nhạc"
        ];

        function searchWord() {
            const inputElement = document.getElementById("englishWord");
            const resultElement = document.getElementById("result");
            const searchTerm = inputElement.value.trim().toLowerCase(); // Lấy từ người dùng nhập, bỏ khoảng trắng và chuyển về chữ thường

            if (searchTerm === "") {
                resultElement.textContent = "Vui lòng nhập từ bạn muốn tìm kiếm.";
                resultElement.className = "error"; // Thêm class error để đổi màu chữ
                return;
            }

            // Tìm vị trí của từ tiếng Anh trong mảng englishWords
            const index = englishWords.indexOf(searchTerm);

            if (index !== -1) {
                // Nếu tìm thấy, hiển thị từ tiếng Việt tương ứng từ mảng vietnameseMeanings
                resultElement.textContent = vietnameseMeanings[index];
                resultElement.className = "success"; // Thêm class success
            } else {
                // Nếu không tìm thấy, hiển thị thông báo "Không tìm thấy"
                resultElement.textContent = `Không tìm thấy nghĩa cho từ "${searchTerm}".`;
                resultElement.className = "error"; // Thêm class error
            }
        }

        // Tùy chọn: Xóa kết quả và input khi người dùng click vào input
        document.getElementById("englishWord").addEventListener("click", function() {
            document.getElementById("englishWord").value = "";
            document.getElementById("result").textContent = "Nhập từ để tra cứu...";
            document.getElementById("result").className = ""; // Xóa các class màu
        });
    </script>
</body>
</html>
