        <div class="header">
            <h1>CHUY·ªÇN ƒê·ªîI CH·ªÆ HOA - CH·ªÆ TH∆Ø·ªúNG</h1>
            <p class="description">Nh·∫≠p chu·ªói k√Ω t·ª± v√† ch·ªçn ch·ª©c nƒÉng ƒë·ªÉ chuy·ªÉn ƒë·ªïi gi·ªØa ch·ªØ hoa v√† ch·ªØ th∆∞·ªùng</p>
        </div>
        
        <div class="instructions">
            <h3>H∆∞·ªõng d·∫´n s·ª≠ d·ª•ng:</h3>
            <ul>
                <li>Nh·∫≠p chu·ªói k√Ω t·ª± v√†o √¥ b√™n d∆∞·ªõi</li>
                <li>Ch·ªçn m·ªôt trong c√°c ch·ª©c nƒÉng chuy·ªÉn ƒë·ªïi</li>
                <li>K·∫øt qu·∫£ s·∫Ω hi·ªÉn th·ªã ·ªü ph·∫ßn "K·∫øt qu·∫£ chuy·ªÉn ƒë·ªïi"</li>
                <li>B·∫°n c√≥ th·ªÉ nh·∫≠p l·∫°i ho·∫∑c x√≥a n·ªôi dung ƒë·ªÉ th·ª≠ nghi·ªám</li>
            </ul>
        </div>
        
        <div class="input-container">
            <label for="inputText">Nh·∫≠p chu·ªói k√Ω t·ª±:</label>
            <textarea id="inputText" placeholder="Nh·∫≠p vƒÉn b·∫£n t·∫°i ƒë√¢y..."></textarea>
            <div class="char-counter">S·ªë k√Ω t·ª±: <span id="charCount">0</span></div>
        </div>
        
        <div class="controls">
            <button id="swapCaseBtn" class="btn"><i>‚ÜïÔ∏è</i> ƒê·∫£o ng∆∞·ª£c hoa/th∆∞·ªùng</button>
            <button id="toUpperCaseBtn" class="btn"><i>‚¨ÜÔ∏è</i> Chuy·ªÉn th√†nh HOA</button>
            <button id="toLowerCaseBtn" class="btn"><i>‚¨áÔ∏è</i> Chuy·ªÉn th√†nh th∆∞·ªùng</button>
            <button id="clearBtn" class="btn"><i>üóëÔ∏è</i> X√≥a t·∫•t c·∫£</button>
        </div>
        
        <div class="result-container">
            <div class="result-title"><i>üîç</i> K·∫øt qu·∫£ chuy·ªÉn ƒë·ªïi:</div>
            <div id="result">K·∫øt qu·∫£ s·∫Ω hi·ªÉn th·ªã ·ªü ƒë√¢y...</div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Tham chi·∫øu ƒë·∫øn c√°c ph·∫ßn t·ª≠ DOM
            const inputText = document.getElementById('inputText');
            const swapCaseBtn = document.getElementById('swapCaseBtn');
            const toUpperCaseBtn = document.getElementById('toUpperCaseBtn');
            const toLowerCaseBtn = document.getElementById('toLowerCaseBtn');
            const clearBtn = document.getElementById('clearBtn');
            const resultDisplay = document.getElementById('result');
            const charCount = document.getElementById('charCount');
            
            // C·∫≠p nh·∫≠t s·ªë k√Ω t·ª±
            inputText.addEventListener('input', () => {
                charCount.textContent = inputText.value.length;
            });
            
            // H√†m ƒë·∫£o ng∆∞·ª£c ch·ªØ hoa/th∆∞·ªùng
            function swapCase() {
                const text = inputText.value;
                let result = '';
                
                for (let i = 0; i < text.length; i++) {
                    const char = text[i];
                    if (char === char.toUpperCase()) {
                        result += char.toLowerCase();
                    } else {
                        result += char.toUpperCase();
                    }
                }
                
                resultDisplay.textContent = result;
                animateResult();
            }
            
            // H√†m chuy·ªÉn th√†nh ch·ªØ hoa
            function toUpperCase() {
                resultDisplay.textContent = inputText.value.toUpperCase();
                animateResult();
            }
            
            // H√†m chuy·ªÉn th√†nh ch·ªØ th∆∞·ªùng
            function toLowerCase() {
                resultDisplay.textContent = inputText.value.toLowerCase();
                animateResult();
            }
            
            // H√†m x√≥a t·∫•t c·∫£
            function clearAll() {
                inputText.value = '';
                resultDisplay.textContent = 'K·∫øt qu·∫£ s·∫Ω hi·ªÉn th·ªã ·ªü ƒë√¢y...';
                charCount.textContent = '0';
                inputText.focus();
            }
            
            // Hi·ªáu ·ª©ng hi·ªÉn th·ªã k·∫øt qu·∫£
            function animateResult() {
                resultDisplay.style.animation = 'pulse 0.5s';
                setTimeout(() => {
                    resultDisplay.style.animation = '';
                }, 500);
            }
            
            // G√°n s·ª± ki·ªán cho c√°c n√∫t
            swapCaseBtn.addEventListener('click', swapCase);
            toUpperCaseBtn.addEventListener('click', toUpperCase);
            toLowerCaseBtn.addEventListener('click', toLowerCase);
            clearBtn.addEventListener('click', clearAll);
            
            // T·ª± ƒë·ªông ƒë·∫∑t focus v√†o √¥ nh·∫≠p
            inputText.focus();
        });
    </script>
