    <div class="container">
        <h1>CH√àN D·∫§U "-" GI·ªÆA C√ÅC S·ªê CH·∫¥N</h1>
        <p class="description">Nh·∫≠p c√°c s·ªë nguy√™n v√†o m·∫£ng, sau ƒë√≥ nh·∫•n n√∫t "X·ª≠ l√Ω" ƒë·ªÉ ch√®n d·∫•u "-" gi·ªØa c√°c s·ªë ch·∫µn li·ªÅn k·ªÅ</p>
        
        <div class="instructions">
            <h3>H∆∞·ªõng d·∫´n s·ª≠ d·ª•ng:</h3>
            <ul>
                <li>Nh·∫≠p s·ªë nguy√™n v√†o √¥ b√™n d∆∞·ªõi v√† nh·∫•n n√∫t <strong>Th√™m S·ªë</strong> ho·∫∑c ph√≠m <strong>Enter</strong></li>
                <li>C√°c s·ªë ƒë√£ nh·∫≠p s·∫Ω hi·ªÉn th·ªã trong khung "M·∫£ng hi·ªán t·∫°i"</li>
                <li>Nh·∫•n n√∫t <strong>X·ª≠ l√Ω M·∫£ng</strong> ƒë·ªÉ ch√®n d·∫•u "-" gi·ªØa c√°c s·ªë ch·∫µn li·ªÅn k·ªÅ</li>
                <li>K·∫øt qu·∫£ s·∫Ω hi·ªÉn th·ªã ·ªü khung "K·∫øt qu·∫£ x·ª≠ l√Ω"</li>
                <li>Nh·∫•n n√∫t <strong>X√≥a M·∫£ng</strong> ƒë·ªÉ b·∫Øt ƒë·∫ßu l·∫°i</li>
            </ul>
        </div>
        
        <div class="input-group">
            <input type="number" id="numberInput" placeholder="Nh·∫≠p s·ªë nguy√™n...">
            <button id="addButton">Th√™m S·ªë</button>
        </div>
        
        <div class="array-container">
            <div class="array-title">
                <span id="elementCount">0</span> S·ªë trong m·∫£ng:
            </div>
            <div id="arrayElements" class="elements-list">
                <div class="empty-array">Ch∆∞a c√≥ s·ªë n√†o trong m·∫£ng</div>
            </div>
        </div>
        
        <div class="actions">
            <button id="processButton" class="btn"><i>‚ö°</i> X·ª≠ l√Ω M·∫£ng</button>
            <button id="clearButton" class="btn"><i>üóëÔ∏è</i> X√≥a M·∫£ng</button>
        </div>
        
        <div class="result-container">
            <div class="result-title"><i>üîç</i> K·∫øt qu·∫£ x·ª≠ l√Ω:</div>
            <div id="result">Ch∆∞a c√≥ k·∫øt qu·∫£</div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Khai b√°o m·∫£ng ƒë·ªÉ l∆∞u tr·ªØ c√°c s·ªë
            let array = [];
            
            // Tham chi·∫øu ƒë·∫øn c√°c ph·∫ßn t·ª≠ DOM
            const numberInput = document.getElementById('numberInput');
            const addButton = document.getElementById('addButton');
            const arrayElements = document.getElementById('arrayElements');
            const elementCount = document.getElementById('elementCount');
            const processButton = document.getElementById('processButton');
            const clearButton = document.getElementById('clearButton');
            const resultDisplay = document.getElementById('result');
            
            // H√†m th√™m s·ªë v√†o m·∫£ng
            function addNumber() {
                const value = numberInput.value.trim();
                
                if (value) {
                    // Chuy·ªÉn gi√° tr·ªã th√†nh s·ªë nguy√™n
                    const number = parseInt(value);
                    
                    // Th√™m s·ªë v√†o m·∫£ng
                    array.push(number);
                    
                    // C·∫≠p nh·∫≠t giao di·ªán
                    updateArrayDisplay();
                    
                    // Reset input
                    numberInput.value = '';
                    numberInput.focus();
                }
            }
            
            // H√†m c·∫≠p nh·∫≠t hi·ªÉn th·ªã m·∫£ng
            function updateArrayDisplay() {
                // C·∫≠p nh·∫≠t s·ªë l∆∞·ª£ng ph·∫ßn t·ª≠
                elementCount.textContent = array.length;
                
                // X√≥a n·ªôi dung hi·ªán t·∫°i
                arrayElements.innerHTML = '';
                
                // Hi·ªÉn th·ªã th√¥ng b√°o n·∫øu m·∫£ng r·ªóng
                if (array.length === 0) {
                    arrayElements.innerHTML = '<div class="empty-array">Ch∆∞a c√≥ s·ªë n√†o trong m·∫£ng</div>';
                    return;
                }
                
                // Hi·ªÉn th·ªã t·ª´ng ph·∫ßn t·ª≠
                array.forEach((number, index) => {
                    const elementDiv = document.createElement('div');
                    elementDiv.className = 'element';
                    
                    // ƒê√°nh d·∫•u s·ªë ch·∫µn
                    const isEven = number % 2 === 0;
                    if (isEven) {
                        elementDiv.style.background = 'linear-gradient(135deg, #1a2a6c, #b21f1f)';
                    }
                    
                    elementDiv.innerHTML = `
                        <span class="index">${index}</span>
                        ${number}
                        <span class="delete" data-index="${index}">√ó</span>
                    `;
                    arrayElements.appendChild(elementDiv);
                });
                
                // Th√™m s·ª± ki·ªán x√≥a cho c√°c n√∫t delete
                document.querySelectorAll('.element .delete').forEach(button => {
                    button.addEventListener('click', (e) => {
                        const index = parseInt(e.target.getAttribute('data-index'));
                        array.splice(index, 1);
                        updateArrayDisplay();
                    });
                });
            }
            
            // H√†m x·ª≠ l√Ω ch√®n d·∫•u "-" gi·ªØa c√°c s·ªë ch·∫µn li·ªÅn k·ªÅ
            function processArray() {
                if (array.length === 0) {
                    resultDisplay.textContent = "M·∫£ng r·ªóng! H√£y th√™m s·ªë tr∆∞·ªõc khi x·ª≠ l√Ω.";
                    return;
                }
                
                // T·∫°o m·ªôt m·∫£ng m·ªõi ƒë·ªÉ l∆∞u k·∫øt qu·∫£
                const resultArray = [];
                
                // Duy·ªát qua t·ª´ng ph·∫ßn t·ª≠ trong m·∫£ng
                for (let i = 0; i < array.length; i++) {
                    // Th√™m s·ªë hi·ªán t·∫°i v√†o k·∫øt qu·∫£
                    resultArray.push(array[i]);
                    
                    // Ki·ªÉm tra n·∫øu s·ªë hi·ªán t·∫°i v√† s·ªë ti·∫øp theo ƒë·ªÅu ch·∫µn
                    if (i < array.length - 1 && array[i] % 2 === 0 && array[i+1] % 2 === 0) {
                        // Ch√®n d·∫•u "-" gi·ªØa hai s·ªë ch·∫µn
                        resultArray.push("-");
                    }
                }
                
                // Hi·ªÉn th·ªã k·∫øt qu·∫£
                displayResult(resultArray);
            }
            
            // H√†m hi·ªÉn th·ªã k·∫øt qu·∫£
            function displayResult(resultArray) {
                resultDisplay.innerHTML = '';
                
                resultArray.forEach((item, index) => {
                    const element = document.createElement('span');
                    
                    if (typeof item === 'number') {
                        if (item % 2 === 0) {
                            const group = document.createElement('span');
                            group.className = 'even-group';
                            group.textContent = item;
                            resultDisplay.appendChild(group);
                        } else {
                            element.textContent = item;
                            resultDisplay.appendChild(element);
                        }
                    } else {
                        const dash = document.createElement('span');
                        dash.className = 'dash';
                        dash.textContent = ' - ';
                        resultDisplay.appendChild(dash);
                    }
                    
                    // Th√™m d·∫•u c√°ch n·∫øu kh√¥ng ph·∫£i l√† ph·∫ßn t·ª≠ cu·ªëi c√πng v√† kh√¥ng ph·∫£i d·∫•u "-"
                    if (index < resultArray.length - 1 && typeof resultArray[index + 1] !== 'string') {
                        resultDisplay.appendChild(document.createTextNode(' '));
                    }
                });
                
                // Th√™m hi·ªáu ·ª©ng
                resultDisplay.style.animation = 'pulse 0.5s';
                setTimeout(() => {
                    resultDisplay.style.animation = '';
                }, 500);
            }
            
            // H√†m x√≥a to√†n b·ªô m·∫£ng
            function clearArray() {
                array = [];
                updateArrayDisplay();
                resultDisplay.innerHTML = "Ch∆∞a c√≥ k·∫øt qu·∫£";
            }
            
            // Th√™m s·ª± ki·ªán khi nh·∫•n n√∫t "Th√™m"
            addButton.addEventListener('click', addNumber);
            
            // Th√™m s·ª± ki·ªán khi nh·∫•n Enter trong √¥ input
            numberInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    addNumber();
                }
            });
            
            // Th√™m s·ª± ki·ªán khi nh·∫•n n√∫t "X·ª≠ l√Ω"
            processButton.addEventListener('click', processArray);
            
            // Th√™m s·ª± ki·ªán khi nh·∫•n n√∫t "X√≥a M·∫£ng"
            clearButton.addEventListener('click', clearArray);
            
            // Kh·ªüi t·∫°o hi·ªÉn th·ªã
            updateArrayDisplay();
        });
    </script>
