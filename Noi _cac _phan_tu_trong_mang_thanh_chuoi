<body>
    <div class="container">
        <h1>Nối Phần Tử Mảng Thành Chuỗi</h1>
        <button onclick="joinArray()">Nối Mảng</button>
        <div id="result">Kết quả sẽ hiển thị ở đây...</div>
    </div>

    <script>
        function joinArray() {
            // Mảng mẫu theo yêu cầu
            const myArray = ['A', 'B', 'C', 'D', 'E'];
            
            // Nối các phần tử thành chuỗi sử dụng join()
            const resultString = myArray.join('');
            
            // Hiển thị kết quả
            document.getElementById('result').innerText = resultString;
        }
    </script>
